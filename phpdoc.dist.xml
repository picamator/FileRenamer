<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
  <parser>
    <target>docs/phpdoc</target>
  </parser>
  <transformer>
    <target>docs/phpdoc</target>
  </transformer>
  <logging>
    <level>warn</level>
        <paths>
            <default>./data/log/{DATE}.log</default>
            <errors>./data/log/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="zend" />
    </transformations>
  <files>
    <directory>.</directory>
    <ignore>configs/*</ignore>
    <ignore>data/*</ignore>
    <ignore>docs/*</ignore>
    <ignore>scripts/*</ignore>
    <ignore>tests/*</ignore>
  </files>
</phpdoc>
